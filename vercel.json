{
  "version": 2,
  "builds": [
    { "src": "dashboard/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "server/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/server.js" },
    { "src": "/(.*)", "dest": "/dashboard/dist/$1" }
  ]
}
